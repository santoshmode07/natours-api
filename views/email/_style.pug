style.
  img {
    border: none;
    -ms-interpolation-mode: bicubic;
    max-width: 100%;
  }
  body {
    background: #eef3f5;
    font-family: 'Lato', Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
    padding: 24px 0;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    color: #2e3a40;
  }
  table {
    border-collapse: separate;
    mso-table-lspace: 0pt;
    mso-table-rspace: 0pt;
    width: 100%;
  }
  table td {
    font-family: 'Lato', Arial, sans-serif;
    font-size: 15px;
    vertical-align: top;
  }
  .body {
    background: #eef3f5;
    width: 100%;
  }
  .container {
    display: block;
    margin: 0 auto !important;
    max-width: 620px;
    padding: 0 14px;
    width: 620px;
  }
  .content {
    box-sizing: border-box;
    display: block;
    margin: 0 auto;
    max-width: 620px;
    padding: 0;
  }
  .main {
    background: #ffffff;
    border-radius: 18px;
    width: 100%;
    box-shadow: 0 12px 30px rgba(25, 36, 43, 0.1);
    overflow: hidden;
  }
  .brand-bar {
    background: linear-gradient(120deg, #7dd56f, #28b487);
    padding: 24px 28px;
    color: #ffffff;
    text-align: left;
  }
  .brand-title {
    display: inline-block;
    font-size: 12px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-weight: 700;
    background: rgba(255, 255, 255, 0.18);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 999px;
    padding: 6px 12px;
    margin-bottom: 12px;
  }
  .brand-heading {
    font-size: 22px;
    line-height: 1.25;
    font-weight: 700;
    margin: 0;
  }
  .wrapper {
    box-sizing: border-box;
    padding: 30px 28px 24px;
  }
  h1,
  h2,
  h3,
  h4 {
    color: #1c2830;
    font-family: 'Lato', Arial, sans-serif;
    font-weight: 700;
    line-height: 1.25;
    margin: 0 0 16px;
  }
  h1 {
    font-size: 28px;
  }
  p,
  ul,
  ol {
    font-family: 'Lato', Arial, sans-serif;
    font-size: 15px;
    font-weight: 400;
    margin: 0 0 14px;
    color: #3a4b54;
  }
  p.lead {
    font-size: 17px;
    color: #253640;
    font-weight: 600;
    margin-bottom: 18px;
  }
  a {
    color: #1b8f6a;
    text-decoration: none;
  }
  .meta-note {
    font-size: 13px;
    color: #6e8088;
  }
  .otp-code {
    display: inline-block;
    margin: 8px 0 14px;
    font-size: 32px;
    font-weight: 700;
    letter-spacing: 7px;
    color: #1c2830;
    background: #f1f7f4;
    border: 1px dashed #8bcfa8;
    border-radius: 12px;
    padding: 10px 16px;
  }
  .btn {
    box-sizing: border-box;
    width: 100%;
  }
  .btn > tbody > tr > td {
    padding: 8px 0 18px;
  }
  .btn table {
    width: auto;
  }
  .btn table td {
    background: transparent;
    border-radius: 999px;
    text-align: left;
  }
  .btn a {
    border: none;
    border-radius: 999px;
    box-sizing: border-box;
    color: #ffffff;
    cursor: pointer;
    display: inline-block;
    font-size: 14px;
    font-weight: 700;
    margin: 0;
    padding: 12px 24px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .btn-primary a {
    background: linear-gradient(135deg, #2fb784, #1c9a73);
    box-shadow: 0 10px 20px rgba(38, 157, 116, 0.25);
  }
  .btn-primary a:hover {
    background: linear-gradient(135deg, #27a779, #178663);
  }
  .footer {
    clear: both;
    margin-top: 14px;
    text-align: center;
    width: 100%;
  }
  .footer td,
  .footer p,
  .footer span,
  .footer a {
    color: #90a0a7;
    font-size: 12px;
    text-align: center;
  }
  .last {
    margin-bottom: 0;
  }
  @media only screen and (max-width: 620px) {
    body {
      padding: 10px 0;
    }
    .container {
      padding: 0 10px;
      width: 100% !important;
    }
    .brand-bar {
      padding: 20px 18px;
    }
    .brand-heading {
      font-size: 20px;
    }
    .wrapper {
      padding: 24px 18px 18px;
    }
    p,
    .meta-note,
    .btn a {
      font-size: 14px !important;
    }
    .otp-code {
      font-size: 28px;
      letter-spacing: 5px;
      padding: 9px 12px;
    }
  }
