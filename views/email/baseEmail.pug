//- Converted from HTML using https://html2pug.now.sh/

doctype html
html
    head
        meta(name='viewport', content='width=device-width')
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title= subject

        include _style
    body
        table.body(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td.container
                        .content
                            table.main(role='presentation')
                                tbody
                                    tr
                                        td.brand-bar
                                            table.brand-table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                                tbody
                                                    tr
                                                        td.brand-logo-cell
                                                            if logoUrl
                                                                img.brand-logo(src=logoUrl, alt='Natours logo')
                                                        td.brand-copy
                                                            span.brand-title Natours
                                                            h2.brand-heading Your next adventure starts here
                                    tr
                                        td.wrapper
                                            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                                tbody
                                                    tr
                                                        td
                                                            block content

                            .footer
                                table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                    tbody
                                        tr
                                            td.content-block
                                                span.apple-link Natours Inc, 123 Nowhere Road, San Francisco, CA 99999
                                                br
                                                | Need help? Reply to this email and we will assist you.
