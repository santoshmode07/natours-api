extends baseEmail


block content
    p.lead Hi #{firstName},
    p We received a request to reset your Natours password.
    p Click the button below to choose a new password. This link is valid for 10 minutes.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset password
    p.meta-note If you did not request a password reset, you can safely ignore this email.
    p.last Regards,
        br
        | Santosh and the Natours team
