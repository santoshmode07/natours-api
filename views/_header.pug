header.header
    nav.nav.nav--tours
        a.nav__el.nav__el--primary(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='#') Log out
            a.nav__el(href='/me')
                - const userPhotoSrc = user.photo && user.photo.startsWith('http') ? user.photo : `/img/users/${user.photo}`
                img.nav__user-img(src=userPhotoSrc alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up
        
