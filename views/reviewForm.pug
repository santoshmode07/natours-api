extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg= `Review for ${tour.name} Tour`
            form.form.form--review
                .form__group
                    label.form__label(for='rating') Rating (1-5)
                    input#rating.form__input(type='number', placeholder='5', required, min='1', max='5')
                .form__group.ma-bt-md
                    label.form__label(for='review') Your Review
                    textarea#review.form__input(placeholder='Tell us about your experience...', required, rows='5')
                .form__group
                    button.btn.btn--green.btn--save-review(data-tour-id=`${tour.id}`) Submit Review
